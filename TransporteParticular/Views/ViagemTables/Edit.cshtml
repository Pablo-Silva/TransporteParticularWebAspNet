@model TransporteParticular.Models.ViagemTable

@{
    ViewData["Title"] = "Edit";
}

<h2>Editar Viagem</h2>

<h4>Dados da Viagem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdViagem" />
            <div class="form-group">
                <label asp-for="IdMotorista" class="control-label">Motorista</label>
                <select asp-for="IdMotorista" class="form-control" asp-items="ViewBag.IdMotorista"></select>
                <span asp-validation-for="IdMotorista" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdCliente" class="control-label">Cliente</label>
                <select asp-for="IdCliente" class="form-control" asp-items="ViewBag.IdCliente"></select>
                <span asp-validation-for="IdCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EnderecoSaida" class="control-label">Endereco Saida</label>
                <input asp-for="EnderecoSaida" class="form-control" />
                <span asp-validation-for="EnderecoSaida" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EnderecoChegada" class="control-label">Endereco Chegada</label>
                <input asp-for="EnderecoChegada" class="form-control" />
                <span asp-validation-for="EnderecoChegada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataInicio" class="control-label">Data Inicio</label>
                <input asp-for="DataInicio" class="form-control" />
                <span asp-validation-for="DataInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataFim" class="control-label">Data Fim</label>
                <input asp-for="DataFim" class="form-control" />
                <span asp-validation-for="DataFim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Confirmar Viagem" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model TransporteParticular.Models.MotoristaTable

@{
    ViewData["Title"] = "Details";
}

<h2>Detalhes</h2>

<div>
    <h4>Detalhes Motorista</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nome:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NomeMotorista)
        </dd>
        <dt>
            Data Nascimento:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DataNascimento)
        </dd>
        <dt>
            Sexo:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Sexo)
        </dd>
        <dt>
            CPF
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Cpf)
        </dd>
        <dt>
            Numero Celular:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NumeroCelular)
        </dd>
        <dt>
            Email:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DataCadastro)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DataCadastro)
        </dd>
        <dt>
            Status:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.StatusMotorista)
        </dd>
        <dt>
            Carteira Motorista:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CarteiraMotorista)
        </dd>
        <dt>
            Veiculo
        </dt>
        <dd>
            @Html.DisplayFor(model => model.IdVeiculoNavigation.ModeloVeiculo)
        </dd>
        <dt>
            Placa:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.IdDetalhesVeiculosNavigation.PlacaVeiculo)
        </dd>

    </dl>
</div>
<div>
    <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model.IdMotorista">Editar</a> |
    <a class="btn btn-primary" asp-action="Index">Voltar</a>
</div>
